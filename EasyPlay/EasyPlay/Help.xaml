<Window x:Class="EasyPlay.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasyPlay - Hilfe" MinHeight="400" MinWidth="600" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="150"/>
            <ColumnDefinition Width="5" MinWidth="5" MaxWidth="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView Name="lbHelp" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" SelectionMode="Single" SelectionChanged="lbHelp_SelectionChanged" FontSize="14" FontFamily="Arial"></ListView>
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
        <TextBlock Grid.Column="2" Name="lbTitle" VerticalAlignment="Top" HorizontalAlignment="Stretch" FontSize="20" FontFamily="Arial" TextWrapping="Wrap" Margin="5,0,0,0"/>
        <TextBlock Grid.Column="2" Name="txbHelp" HorizontalAlignment="Stretch" Margin="5,50,0,0" TextWrapping="Wrap" FontSize="12" FontFamily="Arial"/>
    </Grid>
</Window>
